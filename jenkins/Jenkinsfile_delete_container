pipeline {
    agent any

    stages {
        stage('remove directory from workspace') {
            steps {
                echo 'clean '
                sh '''
                rm -rf /var/lib/jenkins/workspace/jenkins_web-cicd
                '''
            }
        }
        try{
            stage('remove docker container') {
                steps {
                    echo 'container delete'
                    sh '''
                    docker ps -aq | xargs docker stop | xargs docker rm
                    '''
                }
            }
        } catch(e)
        {
            echo "do nothing"
        }

    }
}
