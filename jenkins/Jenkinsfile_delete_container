
node {
    stage('remove dir') {
        try {
			echo 'clean '
			sh '''
			rm -rf /var/lib/jenkins/workspace/jenkins_web-cicd/my_portfolio
			rm -rf /var/lib/jenkins/workspace/jenkins_web-cicd/Portfolio
			'''       
			}
        catch (exc) 
		{
            echo 'nothing to do!'
        }
    }
	stage('remove container') {
        try {
			echo 'container remove '
			sh '''
			docker ps -aq | xargs docker stop | xargs docker rm
			'''       
			}
        catch (exc) 
		{
            echo 'nothing to do!'
        }
    }
}
